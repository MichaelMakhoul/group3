    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/LogoutServlet</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>CustomerUpdateServlet</servlet-name>
        <servlet-class>com.controller.CustomerUpdateServlet</servlet-class>
    </servlet>
